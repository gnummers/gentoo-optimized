src_prepare() {
	default

	# As per http://hackage.haskell.org/package/cabal-install-2.4.0.0/revisions/
	cabal_chdeps 'Cabal      == 2.4.*' 'Cabal >=2.4.0.1 && <2.5'\
		'async      >= 2.0      && < 3' 'async >=2.0 && <2.3'\
		'base       >= 4.6      && < 5' 'base >=4.8 && <4.13'\
		'binary     >= 0.7      && < 0.9' 'binary >=0.7.3 && <0.9'\
		'bytestring >= 0.10.2   && < 1' 'bytestring >=0.10.6.0 && <0.11'\
		'containers >= 0.5      && < 0.7' 'containers >=0.5.6.2 && <0.7'\
		'deepseq    >= 1.3      && < 1.5' 'deepseq >=1.4.1.1 && <1.5'\
		'filepath   >= 1.3      && < 1.5' 'filepath >=1.4.0.0 && <1.5'\
		'mtl        >= 2.0      && < 3' 'mtl >=2.0 && <2.3'\
		'process    >= 1.1.0.2  && < 1.7' 'process >=1.2.3.0 && <1.7'\
		'stm        >= 2.0      && < 3' 'stm >=2.0 && <2.6'\
		'time       >= 1.4      && < 1.10' 'time >=1.5.0.1 && <1.10'\
		'network    >= 2.6      && < 2.8' 'network >=2.6 && <3.2'

	#if use noprefs; then
	#	epatch "${FILESDIR}/${PN}"-0.13.3-nopref.patch
	#fi

	# no chance to link to -threaded on ppc64, alpha and others
	# who use UNREG, not only ARM
	if ! ghc-supports-threaded-runtime; then
		cabal_chdeps '-threaded' ' '
	fi
	eapply_user
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=-debug-conflict-sets \
		--flag=-debug-expensive-assertions \
		--flag=-debug-tracetree \
		--flag=-lib \
		--flag=-monolithic \
		$(cabal_flag native-dns native-dns) \
		--flag=network-uri
}
