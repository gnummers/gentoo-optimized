EAPI=7

# ebuild generated by hackport 0.5.5.9999

CABAL_FEATURES="lib profile haddock hoogle hscolour"
inherit haskell-cabal

DESCRIPTION="Binding to the Poppler"
HOMEPAGE="http://projects.haskell.org/gtk2hs"
SRC_URI="https://hackage.haskell.org/package/${P}/${P}.tar.gz"

LICENSE="GPL-2"
SLOT="0/${PV}"
KEYWORDS="~amd64 ~x86"
IUSE="gtk3"

# USE=cairo is needed for poppler to provide /usr/lib64/pkgconfig/poppler-glib.pc
RDEPEND="app-text/poppler[cairo]
	>=dev-haskell/cairo-0.13:=[profile?] <dev-haskell/cairo-0.15:=[profile?]
	>=dev-haskell/glib-0.13:=[profile?] <dev-haskell/glib-0.15:=[profile?]
	dev-haskell/mtl:=[profile?]
	>=dev-lang/ghc-7.4.1:=
	x11-libs/cairo
	x11-libs/pango
	gtk3? ( >=dev-haskell/gtk3-0.14.3:=[profile?] <dev-haskell/gtk3-0.15:=[profile?]
		x11-libs/gtk+:3 )
	!gtk3? ( >=dev-haskell/gtk-0.14.3:=[profile?] <dev-haskell/gtk-0.15:=[profile?]
			dev-libs/glib:2
			x11-libs/gtk+:2 )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.24
	>=dev-haskell/gtk2hs-buildtools-0.13.1.0 <dev-haskell/gtk2hs-buildtools-0.14
	virtual/pkgconfig
"

src_prepare() {
	default

	cabal_chdeps \
		'Cabal >= 1.24 && < 2.1' 'Cabal >= 1.24'
}

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag gtk3 gtk3)
}
