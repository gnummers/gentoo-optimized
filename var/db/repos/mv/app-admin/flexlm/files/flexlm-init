depend() {
	need net
}

start() {
	ebegin "Starting lmgrd"
	su - ${LMUSER} -c "umask 022; /opt/flexlm/bin/lmgrd -c '${LMLICENSE}' -l '${LMLOG}'"
	eend $?
}

stop() {
	ebegin "Stopping lmgrd"
	/opt/flexlm/bin/lmdown -q -all -force -c "${LMLICENSE}" >& /dev/null
	eend $?
}
